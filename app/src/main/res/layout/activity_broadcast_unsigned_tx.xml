<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/addressAreaContainer"
        android:layout_width="409dp"
        android:layout_height="141dp"
        android:background="@color/v3_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.samourai.sentinel.widgets.HorizontalStepsViewIndicator
            android:id="@+id/stepView"
            android:layout_width="349dp"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.samourai.sentinel.widgets.HorizontalStepsViewIndicator>
    </LinearLayout>

    <TextView
        android:id="@+id/step1"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:text="@string/step1"
        android:textColor="#9A9A9A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step1_text"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/step1_text"
        android:textColor="#9A9A9A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showQrCode"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/disabled_grey"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/show_qr_code"
        android:textColor="@color/green"
        app:cornerRadius="8dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/step2"
        android:textColor="#9A9A9A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showQrCode" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/step2_text"
        android:textColor="#9A9A9A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/launchQRScanner"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/disabled_grey"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/launch_qr_scanner"
        android:textColor="@color/blue"
        app:cornerRadius="8dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>